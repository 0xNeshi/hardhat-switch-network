{
    "name": "hardhat-switch-network",
    "version": "0.1.0",
    "description": "Hardhat plugin to enable switching networks during runtime",
    "author": "Nenad MisiÄ‡",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "workspaces": [
        "samples/ethers-project"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/0xNeshi/hardhat-switch-network.git"
    },
    "bugs": {
        "url": "https://github.com/0xNeshi/hardhat-switch-network/issues"
    },
    "homepage": "https://github.com/0xNeshi/hardhat-switch-network#readme",
    "keywords": [
        "ethereum",
        "smart-contracts",
        "hardhat",
        "hardhat-plugin",
        "switch-network",
        "change-network"
    ],
    "scripts": {
        "test": "mocha --exit --recursive 'test/**/*.test.ts' && npm run test --workspaces",
        "test-live": "hardhat compile && ./deploy-contracts.sh && npm test",
        "test-live-txs": "npm run test-live-txs --workspaces",
        "redeploy": "hardhat compile && ./deploy-contracts.sh --reset",
        "build": "tsc",
        "watch": "tsc -w",
        "prepublishOnly": "npm run build",
        "lint": "eslint $(git ls-files '*.ts')",
        "format": "prettier-eslint --list-different --write $(git ls-files '*.ts' '*.js')"
    },
    "files": [
        "dist",
        "src",
        "*.d.ts",
        "*.d.ts.map",
        "*.js",
        "*.js.map",
        "LICENSE",
        "README.md"
    ],
    "devDependencies": {
        "@nomicfoundation/hardhat-ethers": "^3.0.6",
        "@nomicfoundation/hardhat-ignition-ethers": "^0.15.5",
        "@typechain/ethers-v6": "^0.5.1",
        "@typechain/hardhat": "^9.1.0",
        "@types/chai": "^4.1.7",
        "@types/fs-extra": "^11.0.4",
        "@types/mocha": "^10.0.0",
        "@types/node": "^18.0.0",
        "chai": "^4.3.0",
        "eslint": "^8.5.0",
        "ethers": "^6.13.2",
        "hardhat": "^2.22.0",
        "mocha": "^10.7.2",
        "prettier": "3.3.0",
        "prettier-eslint-cli": "^7.0.0",
        "ts-node": "^8.1.0",
        "typechain": "^8.3.2",
        "typescript": "^5.0.0"
    },
    "peerDependencies": {
        "hardhat": "^2.22.0"
    }
}
